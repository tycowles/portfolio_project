<!doctype html>
<html>
  <head>
    <title>Search <%=companyName %></title>
    <style type="text/css">
      .form {
          margin-left: auto;
          margin-right: auto;
          justify-content: center;
          background-color: rgb(235, 235, 235);
          width: 500px;
          align-items: center;
          padding: 50px;
          margin-top: 100px;
          border-radius: 2rem;
          text-align: center;
          margin-bottom: 10%;
      }

  </style>
  </head>
  <body>
    <%- include('index.ejs') %>
    <div class="form">
      <h2>Search <%=companyName %></h2>
    
      <form action="/showResult" method="GET">
        Search:
        <select name="category" id="category">
          <% for(let i = 0; i < newData.category.length; i++) { %>
            <option value="<%= categories[i].cat_id %>"><%= category[i].name %></option>
     
          <% } %> 
        </select>
        <input type="submit" value="Search" > 
      </form>
    </div>

    <%- include('footer.ejs') %>

    TEst
  </body>
</html>