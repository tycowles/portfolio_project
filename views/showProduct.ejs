<!doctype html>
<html>
    <head>
        <title>Search <%=companyName %></title>
        <style type="text/css">
        .form {
            margin-left: auto;
            margin-right: auto;
            justify-content: center;
            background-color: rgb(235, 235, 235);
            width: 500px;
            align-items: center;
            padding: 50px;
            margin-top: 100px;
            border-radius: 2rem;
            text-align: center;
            margin-bottom: 10%;
            min-height: auto;
        }

        ul {
            list-style: none;
        }

        table {
            margin-top: 30px;
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
            background-color: rgb(255, 255, 255);
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #888888;
        }

        .description {
            font-weight: 100;
        }
        p {
            margin-bottom: 0;
            text-align: left;
        }

        .forminput {
            margin-left: auto;
            margin-right: auto;
            justify-content: center;
            align-items: center;
            width: 300px;        
        }
        select {
            width: 100%;
            padding: 15px;
            font-weight: bold;
            margin-top: 10px;
            margin-bottom: 20px;
        }

        input {
            width: 50%;
            padding: 15px;
        }

        .enquire {
            text-align: center;
            padding: 5px 5px;
            font-size: 15px;
            background: #e3e3e3;
            border-radius: 2rem; 
            width: auto;
            text-decoration: none;
            color: #000000;
            display: flex;
        }

        .enquire:hover {
            text-align: center;
            padding: 5px 5px;
            font-size: 15px;
            background: #8bbfd7;
            border-radius: 2rem; 
            width: auto;
            text-decoration: none;
            color: #000000;
            display: flex;
        }

    </style>
    </head>
    <body>
        <%- include('index.ejs') %>
        <div class="form">
            <h2>Search <%=companyName %></h2>
            <div class="forminput">
                <form action="/showResult" method="GET">
                    <div class="field">
                        <p>Search: </p> 
                        <select name="category" id="category">
                        <% for(let i = 0; i < category.length; i++) { %>
                            <option name="cat_id" id="cat_id" value="<%= category[i].cat_id %>"><%= category[i].name %></option>
                    
                        <% } %> 
                        </select>
                    </div>
                    <input type="submit" value="Search" >
                </form>

                <a href="login">Add your own listings.</a>

            </div>

            <% if (display) { %>
                <table>
                    <tr>
                        <th>Search results for: <%= searchCat %></th>
                    </tr>
                    <% if (product.length != 0) { %>
                        <% for(let i = 0; i < product.length; i++) { %>
                            <tr>
                                <th><%= product[i].name %></th>
                                <th class="description"><%= product[i].description %></th>
                                <th>$<%= product[i].price %></th>
                                <th><a class="enquire" href="enquire?product_id=<%= product[i].product_id%>&cat_id=<%= cat_id%>">Enquire</a></th>
                                
                            </tr>
                        <% } %>
                    <% } else { %>
                        <tr>
                            <th>There are no current listings for <%= searchCat %></th>
                        </tr>
                    <% } %>
                </table>
            <% } %>
               
        </div>

        <%- include('footer.ejs') %>
    </body>
</html>