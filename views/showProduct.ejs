<!doctype html>
<html>
    <head>
        <title>Search <%=companyName %></title>
        <style type="text/css">
        .form {
            margin-left: auto;
            margin-right: auto;
            justify-content: center;
            background-color: rgb(235, 235, 235);
            width: 500px;
            align-items: center;
            padding: 50px;
            margin-top: 100px;
            border-radius: 2rem;
            text-align: center;
            margin-bottom: 10%;
        }

        ul {
            list-style: none;
        }
        

        table {
            border-collapse: collapse;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #ebebeb;
        }

    </style>
    </head>
    <body>
        <%- include('index.ejs') %>
        <div class="form">
            <h2>Search <%=companyName %></h2>
            
            <form action="/showResult" method="GET">
                Search:
                <select name="category" id="category">
                <% for(let i = 0; i < category.length; i++) { %>
                    <option name="cat_id" id="cat_id" value="<%= category[i].cat_id %>"><%= category[i].name %></option>
            
                <% } %> 
                </select>
                <input type="submit" value="Search" >
            </form>

            <% if (display) { %>
                <table>
                    <% for(let i = 0; i < product.length; i++) { %>
                        <tr>
                            <th><%= product[i].name %></th>
                            <th>$<%= product[i].price %></th>
                        </tr>
                    <% } %>
                </table>
            <% } %>
               
        </div>

        <%- include('footer.ejs') %>
    </body>
</html>