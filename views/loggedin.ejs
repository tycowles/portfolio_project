<!doctype html>
<html>
  <head>
    <title><%=companyName%>: Profile</title>
    <style type="text/css">
            
      .navbar a {
        /* float: left; */
        /* display: block; */
        
        text-align: center;
        padding: 10px 10px;
        font-size: 20px;
        background: #e3e3e3;
        border-radius: 2rem; 
        position: absolute;
        right: 7.5%;
        top: 5%;
        /* margin-top: 5%; */
        /* margin-bottom: auto; */
        width: auto;
        text-decoration: none;
        color: #000000;
        display: flex;
      }

      .logo {
        font-family: 'Courier New', Courier, monospace;
        font-weight: bold;
        font-size: 30px;
      }



      header {
        background: rgb(77, 111, 156);
        padding: 40px;
        color: #000000;
      }

      .content {
        margin-bottom: 10%;
        width: auto;
        text-align: center;
      }

        
    </style>
  </head>
  <body>

    <header>
      <div class="logo">
        <%=companyName%>
      </div>
      <div class="navbar">
        <a href="login">Log Out</a>
        
      </div>
    </header>
    <div class="content">
      <h1> Welcome <%=user.email%></h1>


          Your current listings: 
          <ul>
              <% if (products.length == 0) { %>
                  <h2>You have no products listed</h2>
              <% } else { %>
                      <% for(let i = 0; i < products.length; i++) { %>
                  <li><%= products[i].name %>, $<%= products[i].price %>, <%= products[i].product_id %></li>
                <% }} %> 
          </ul> 

          
          <div class="form">
            <h1>Student swap shop: Add product</h1>
            <form action="/productadded" method="POST">
              <p> <input id="user_id" type="text" name="user_id" value="<%=user.id%>" hidden></p>
              <p> Product name: <input id="name" type="text" name="name"> </p>
              <p> Description: <input id="description" type="text" name="description"> </p>
              <p>Price: <input id="price" type="text" name="price" ></p>
              <input type="submit" value="Add Book" >
            </form>
        </div>
    </div>

        <%- include('footer.ejs') %>
        
  </body>
</html>