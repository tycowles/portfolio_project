<!doctype html>
<html>
    <head>
        <title><%=companyName%>: Profile</title>
        <style type="text/css">
            
            .navbar a {
                text-align: center;
                padding: 10px 10px;
                font-size: 20px;
                background: #e3e3e3;
                border-radius: 2rem; 
                position: absolute;
                right: 7.5%;
                top: 5%;
                width: auto;
                text-decoration: none;
                color: #000000;
                display: flex;
            }

            .logo {
                font-family: 'Courier New', Courier, monospace;
                font-weight: bold;
                font-size: 30px;
            }

            header {
                background: rgb(77, 111, 156);
                padding: 40px;
                color: #000000;
            }

            .content {
                margin-bottom: 10%;
                width: auto;
                text-align: center;
            }

            .field {
                margin: 0;
            }

            p {
                margin-bottom: 0;
                text-align: left;
            }

            .content {
                width: 50%;
                margin-left: 25%;
                margin-right: 25%;
            }
            input {
                width: 100%;
                padding: 10px 15px;
                margin-bottom: 10px;
                margin-top: 5px;
            }

            select {
                width: 105%;
                padding: 10px 15px;
                margin-bottom: 10px;
                margin-top: 5px;
            }

            .submit {
                margin-top: 10%;
            }

            ul {
                list-style: none;
            }
            

            table {
                border-collapse: collapse;
                margin-left: auto;
                margin-right: auto;
                width: 100%;
            }

            th, td {
                text-align: left;
                padding: 8px;
            }

            tr:nth-child(even) {
                background-color: #ebebeb;
            }

        
        </style>
    </head>
    <body>

    <header>
        <div class="logo">
            <%=companyName%>
        </div>
        <div class="navbar">
            <a href="login">Log Out</a>    
        </div>
    </header>

    <div class="content">
        <h2>Your current listings: </h2>
        <table>
            <% if (products.length == 0) { %>
                <h2>You have no products listed</h2>
            <% } else { %>
                <tr>
                    <th >Product Name</th>
                    <th >Price</th>
                </tr>
                <% for(let i = 0; i < products.length; i++) { %>
                    <tr>
                        <th><%= products[i].name %></th>
                        <th>$<%= products[i].price %></th>
                        <th>
                            <form action="/deleteProduct" method="POST">
                                <input id="product_id" type="text" name="product_id" value="<%=products[i].product_id%>" hidden>
                                <input id="user_id" type="text" name="user_id" value="<%=user_id%>" hidden>
                                <input type="submit" value="Delete" >
                            </form>
                        </th>
                    </tr>           
            <% }} %> 
        </table>
          
        <div class="form">
            <h1>Student swap shop: Add product</h1>
            <form action="/productadded" method="POST">
                <p> <input id="user_id" type="text" name="user_id" value="<%=user_id%>" hidden></p>
                <div class="field">
                    <p> Product name:</p>
                    <input id="name" type="text" name="name" placeholder="Name" required>
                </div>
                <div class="field">
                    <p> Subject category: </p>
                    <select name="category" id="category">
                        <% for(let i = 0; i < category.length; i++) { %>
                            <option name="cat_id" id="cat_id" value="<%= category[i].cat_id %>"><%= category[i].name %></option>
                        <% } %> 
                    </select>
                </div>
                <div class="field">
                    <p> Description: </p>
                    <input id="description" type="text" name="description" placeholder="Description" required>
                </div>
                <div class="field">
                    <p>Price:</p>
                    <input id="price" type="text" name="price" placeholder="10.00" required>
                </div>
                <input type="submit" value="Add Book" >
            </form>
        </div>
    </div>

    <%- include('footer.ejs') %>
        
  </body>
</html>